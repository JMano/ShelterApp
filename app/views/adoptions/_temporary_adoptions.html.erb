<% model_class = Adoption %>
<div class="box-body table-responsive">
  <table id="list_datatable2" class="display table table-bordered table-striped text-center">
    <thead>
    <tr>
      <th class="text-center"><%= model_class.human_attribute_name(:adoption_Code) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:adoption_date) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:adoption_type) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:animal) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:user) %></th>
      <th class="text-center"><%= model_class.human_attribute_name(:employee) %></th>
      <th class="text-center"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @temporary_adoptions.each do |adoption| %>
        <tr>
          <td class="text-center"><%= link_to adoption.id, adoption_path(adoption) %></td>
          <td><%= pretty_datetime(adoption.adoption_date) %></td>
          <% if(adoption.adoption_type == 1) %>
              <td class="text-center">Permanent</td>
          <% else %>
              <td class="text-center">Temporary</td>
          <%end%>
          <td><%= adoption.animal.id %> - <%= adoption.animal.name%></td>
          <td><%= adoption.user.name %></td>
          <td><%= adoption.employee.name %></td>

          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_adoption_path(adoption), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), adoption_path(adoption.id), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs
                  btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>