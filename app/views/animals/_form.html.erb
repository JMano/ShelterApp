                  <%= f.text_field :date_of_birth, {class: "form-control has-feedback-left col-md-7 col-xs-12", id: 'date_picker'}%>
                  <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                </div>
              </div>

            <div class="form-group">
