<% model_class = Employee %>

<div class="right_col" role="main">

  <div class="page-title">
    <div class="title-left">
      <h3>Shelter Employees</h3>
    </div>
  </div>
  <hr>
  <div class="clearfix"></div>

  <section class="content">

    <div class="row">
      <br>
      <div class="col-xs-12">
        <div class="box-header">
          <h3 class="box-title"></h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive">
          <table id="list_datatable" class="display table table-bordered table-striped text-center">
            <thead>
            <tr>
              <th class="text-center"><%= model_class.human_attribute_name(:name) %></th>
              <th class="text-center"><%= model_class.human_attribute_name(:cc) %></th>
              <th class="text-center"><%= model_class.human_attribute_name(:contact) %></th>
              <th class="text-center"><%= model_class.human_attribute_name(:email) %></th>
              <th class="text-center"><%=t '.actions', :default => t('helpers.actions') %></th>
            </tr>
            </thead>
            <tbody>
            <% @employees.each do |employee| %>
                <tr>
                  <td class="text-center"><%= link_to employee.name, employee_path(employee) %></td>
                  <td><%= employee.cc %></td>
                  <td><%= employee.contact %></td>
                  <td><%= employee.email %></td>
                  <td>
                    <%= link_to t('.destroy', :default => t('helpers.links.destroy')), employee_path(employee.id), :method => :delete, :data => {:confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) }, :class => 'btn btn-xs
                  btn-danger' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%= link_to t('.new', :default => t('helpers.links.new')),
                new_employee_path,
                :class => 'btn btn-primary' %>
  </section>

</div>
</div>
