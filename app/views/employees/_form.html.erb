<%= form_for(@employee, html: { role: 'form'}) do |f| %>

    <% if @employee.errors.any? %>
        <h3 class="panel-title text-red"><%= pluralize(@employee.errors.count, 'error') %> prohibited this employee from being saved:</h3><br>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, :class => 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.email_field :email, autofocus: true, class: 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-envelope-o form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :cc, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :cc, autofocus: true, class: 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-cc form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :contact, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :contact, autofocus: true, class: 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.password_field :password, class: 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.password_field :password_confirmation, class: 'form-control has-feedback-left col-md-7 col-xs-12' %>
        <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
      </div>
    </div>
    <%= f.submit t('.sign_up', :default => 'Create'), class: 'btn btn-primary' %>

<% end %>