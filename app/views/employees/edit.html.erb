<div class="right_col" role="main">

  <div class="title-left">
    <h3>Edit Employee</h3>
  </div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2> Employee Information</h2>

          <div class="clearfix"></div>
        </div>

        <div class="x_content">
          <br>

          <div class="form-horizontal form-label-left">

            <%= form_for(@employee, html: { method: :patch, role: 'form' }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group field">
                <%= f.label :name, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :name, :class => 'form-control col-md-7 col-xs-12' %>
                </div>
              </div>

              <div class="form-group field">
                <%= f.label :email, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.email_field :email, class: 'form-control col-md-7 col-xs-12' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :cc, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :cc, class: 'form-control col-md-7 col-xs-12' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :contact, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.text_field :contact, class: 'form-control col-md-7 col-xs-12' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.password_field :password, autocomplete: 'off', class: 'form-control col-md-7 col-xs-12', placeholder: "Leave blank if you don't want to change it" %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control col-md-7 col-xs-12' %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :current_password, class: 'control-label col-md-3 col-sm-3 col-xs-12' %>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control col-md-7 col-xs-12', placeholder: "We need your password to confirm your changes" %>
                </div>
              </div>

              <div class="actions">
                <%= f.submit t('.sign_up', :default => 'Update'), class: 'btn btn-primary' %>
              </div>
            <% end %>

          </div>

        </div>

      </div>
    </div>
  </div>
</div>
