
<div class="form-horizontal form-label-left input_mask">

  <%= form_for(@volunteer) do |f| %>
      <% if @volunteer.errors.any? %>
          <div id="error_explanation">
            <h2 class="text-red"><%= pluralize(@volunteer.errors.count, "error") %> prohibited this donation from being saved:</h2>
            <ul>
              <% @volunteer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <%= f.hidden_field :user_id, id: 'user_id' %>
      <% if action_name == 'edit' %>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_cc, nil, class: "form-control has-feedback-left", id: 'user_cc', placeholder: 'ID/Passport', value:@volunteer.user.cc, disabled: true%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_name, nil, class: "form-control", id: 'user_name', placeholder: 'Full Name', value:@volunteer.user.name, disabled: true%>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_address, nil, class: "form-control has-feedback-left", id: 'user_address', placeholder: 'Address', value:@volunteer.user.address, disabled: true%>
            <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_contact, nil, class: "form-control", id: 'user_contact', placeholder: 'Phone', value:@volunteer.user.contact, disabled: true%>
            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
          </div>
      <% else %>
          <div class="field_with_errors">
            <% if @volunteer.errors[:user_id].any? %>
                <label for="volunteer_volunteer_date" class=" text-red message"><%= @volunteer.errors[:user_id].first %></label><br>
            <% end %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_cc, nil, class: "form-control has-feedback-left", id: 'user_cc', placeholder: 'ID/Passport'%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_name, nil, class: "form-control", id: 'user_name', placeholder: 'Full Name'%>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_address, nil, class: "form-control has-feedback-left", id: 'user_address', placeholder: 'Address'%>
            <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_contact, nil, class: "form-control", id: 'user_contact', placeholder: 'Phone'%>
            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :employee_id, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.text_field :employee,  class: "form-control col-md-7 col-xs-12", disabled: true, value: current_employee.name%>
          <%= f.hidden_field :employee_id , value: current_employee.id%>
          <ul class="parsley-errors-list" id="parsley-id-6535"></ul>
        </div>
      </div>
      <div class="ln_solid"></div>
      <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
          <div class="actions">
            <% if action_name != 'edit' %>
              <%= f.submit 'Submit', class:'btn btn-success'%>
            <% end %>
            <%= link_to 'Back', volunteers_path , class:'btn btn-primary'%>
          </div>
        </div>
      </div>
  <% end %>

</div>
