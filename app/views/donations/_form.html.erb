
<div class="form-horizontal form-label-left input_mask">

  <%= form_for(@donation) do |f| %>
      <% if @donation.errors.any? %>
          <div id="error_explanation">
            <h2 class="text-red"><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>
          </div>
      <% end %>
      <%= f.hidden_field :user_id, id: 'user_id' %>
      <% if action_name == 'edit' %>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_cc, nil, class: "form-control has-feedback-left", id: 'user_cc', placeholder: 'ID/Passport', value:@donation.user.cc, disabled: true%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_name, nil, class: "form-control", id: 'user_name', placeholder: 'Full Name', value:@donation.user.name, disabled: true%>
            <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_address, nil, class: "form-control has-feedback-left", id: 'user_address', placeholder: 'Address', value:@donation.user.address, disabled: true%>
            <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_contact, nil, class: "form-control", id: 'user_contact', placeholder: 'Phone', value:@donation.user.contact, disabled: true%>
            <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
          </div>
          <% else %>
          <div class="field_with_errors">
            <% if @donation.errors[:user_id].any? %>
                <label for="donation_donation_date" class=" text-red message"><%= @donation.errors[:user_id].first %></label><br>
            <% end %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
            <%= f.text_field_tag :user_cc, nil, class: "form-control has-feedback-left", id: 'user_cc', placeholder: 'ID/Passport'%>
            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
          </div>
      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.text_field_tag :user_name, nil, class: "form-control", id: 'user_name', placeholder: 'Full Name'%>
        <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.text_field_tag :user_address, nil, class: "form-control has-feedback-left", id: 'user_address', placeholder: 'Address'%>
        <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
        <%= f.text_field_tag :user_contact, nil, class: "form-control", id: 'user_contact', placeholder: 'Phone'%>
        <span class="fa fa-phone form-control-feedback right" aria-hidden="true"></span>
      </div>
          <% end %>
      <div class="x_title">
        <h2><br>Donation Information</h2>
        <div class="clearfix"></div>
      </div>
      <div class="form-group">
        <%= f.label :donation_date, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.text_field :donation_date,  {class: "form-control has-feedback-left col-md-7 col-xs-12", id: 'date_picker2'}%>
          <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :donation_type, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.select :donation_type, [['Money', 1], ['Food', 2], ['Other', 0]], {}, { class: "form-control col-md-7 col-xs-12",  id: 'donation_type_select'}%>
        </div>
      </div>
      <div class="form-group">
        <span class=" control-label col-md-3 col-sm-3 col-xs-12">
        <%= f.label :quantity%>
        <span id="quantity_value">(â‚¬)</span></span>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.number_field :quantity,  class: "form-control col-md-7 col-xs-12", step: 'any' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.text_area :description,  class: "form-control col-md-7 col-xs-12"%>
          <ul class="parsley-errors-list" id="parsley-id-6535"></ul>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :employee_id, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
        <div class="col-md-6 col-sm-9 col-xs-12">
          <%= f.text_field :employee,  class: "form-control col-md-7 col-xs-12", disabled: true, value: current_employee.name%>
          <%= f.hidden_field :employee_id , value: current_employee.id%>
          <ul class="parsley-errors-list" id="parsley-id-6535"></ul>
        </div>
      </div>
  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
      <div class="actions">
        <%= f.submit 'Submit', class:'btn btn-success'%>
        <%= link_to 'Back', donations_path , class:'btn btn-primary'%>
      </div>
    </div>
  </div>
  <% end %>

</div>
